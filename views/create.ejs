<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Student Information</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    </head>
    <body>
        <div class="jumbotron text-center">
            <h1>Create new student profile</h1>
        </div>
        <div class="container-fluid text-left">
            <form action="/create" method="POST" enctype="multipart/form-data">
                <label for="stu_name">Student Name*:</label>
                <input type="text" id="stu_name" name="stu_name" class="form-control" placeholder="Student Name"><br>
                
                <label for="stu_id">Student ID:</label>
                <input type="text" id="stu_id" name="stu_id" class="form-control" placeholder="Student ID"><br>

                <label for="age">Age:</label>
                <input type="text" id="age" name="age" class="form-control" placeholder="Age"><br>
                
                <label for="programme">Study programme:</label>
                <input type="text" id="programme" name="programme" class="form-control" placeholder="Study programme"><br>
                
                <label for="address">Address:</label>
                <input type="text" id="address" name="adress" class="form-control" placeholder="Address"><br>
                
                <label for="con_no">Contact Number:</label>
                <input type="text" id="con_no" name="con_no" class="form-control" placeholder="Contact Number"><br>

                <label for="cgpa">Cumulative GPA:</label>
                <input type="text" id="cgpa" name="cgpa" class="form-control" placeholder="Cumulative GPA"><br>

                <div class="custom-file">
                    <label class="custom-file-label" for="stu_photo">Student Photo:</label>
                    <input type="file" id="stu_photo" name="stu_photo"" class="form-control custom-file-input" placeholder="Please upload your student photo in JPG/PNG format."><br>
                </div>

                <input type="submit" value="Create">
            </form>
        </div>
    </body>
    <script>
        $(".custom-file-input").on("change", function() {
          var fileName = $(this).val().split("\\").pop();
        });
    </script>
</html>
